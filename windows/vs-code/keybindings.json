// Place your key bindings in this file to override the defaults
[
  // tab navigation
  {
    "key": "ctrl+a tab",
    "command": "workbench.action.nextEditor",
    "when":  "!terminalFocus"
  },
  {
    "key": "ctrl+a shift+tab",
    "command": "workbench.action.previousEditor",
    "when":  "!terminalFocus"
  },
  {
    "key": "ctrl+tab",
    "command": "-workbench.action.quickOpenNavigateNextInEditorPicker",
    "when": "inEditorsPicker && inQuickOpen"
  },
  {
    "key": "ctrl+shift+tab",
    "command": "-workbench.action.quickOpenNavigatePreviousInEditorPicker",
    "when": "inEditorsPicker && inQuickOpen"
  },
  // Navigate panes
  {
    "key": "ctrl+k",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.navigateDown"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
    "when": "vim.mode != 'Insert' && !panelFocus"
  },
  {
    "key": "ctrl+l",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "ctrl+k",
    "command": "workbench.files.action.focusOpenEditorsView",
    "when": "sideBarFocus && explorerViewletVisible"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "sideBarFocus && explorerViewletVisible && !filesExplorerFocus"
  },
  {
    "key": "ctrl+h",
    "command": "workbench.action.navigateLeft",
    "when": "panelFocus && vim.mode != 'Insert'"
  },
  // Split Editors
  {
    "key": "ctrl+a shift+\\",
    "command": "workbench.action.splitEditor",
    "when": "!terminalFocus"
  },
  {
    "key": "ctrl+a -",
    "command": "workbench.action.splitEditorDown",
    "when":  "!terminalFocus"
  },
  // Close Editors
  {
    "key": "ctrl+a x",
    "command": "workbench.action.closeActiveEditor",
    "when":  "!terminalFocus"
  },
  {
    "key": "ctrl+shift+g",
    "command": "workbench.view.scm",
    "when": "workbench.scm.active"
  },
  {
    "key": "ctrl+b",
    "command": "-extension.vim_ctrl+b",
    "when": "editorTextFocus && vim.active && vim.use<C-b> && !inDebugRepl && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    "key": "ctrl+`",
    "command": "-workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  // file explorer shortcuts
  {
    "key": "enter",
    "command": "-renameFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "r",
    "command": "renameFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "p",
    "command": "filesExplorer.paste",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "y",
    "command": "filesExplorer.copy",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !inputFocus"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !inputFocus"
  },
  {
    "key": "x",
    "command": "filesExplorer.cut",
    "when": "filesExplorerFocus && foldersViewVisible && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "ctrl+u",
    "command": "list.focusPageUp",
    "when": "listFocus && !inputFocus"
  },
  {
    "key": "ctrl+d",
    "command": "list.focusPageDown",
    "when": "listFocus && !inputFocus"
  },
  // Folding
  {
    "key": "ctrl+a f",
    "command": "editor.fold",
    "when": "editorTextFocus && foldingEnabled && !terminalFocus"
  },
  {
    "key": "ctrl+a ctrl+f",
    "command": "editor.foldAll",
    "when": "editorTextFocus && foldingEnabled && !terminalFocus"
  },
  {
    "key": "ctrl+a ctrl+1",
    "command": "editor.foldLevel1",
    "when": "editorTextFocus && foldingEnabled && !terminalFocus"
  },
  {
    "key": "ctrl+a ctrl+2",
    "command": "editor.foldLevel2",
    "when": "editorTextFocus && foldingEnabled && !terminalFocus"
  },
  {
    "key": "ctrl+a ctrl+3",
    "command": "editor.foldLevel3",
    "when": "editorTextFocus && foldingEnabled && !terminalFocus"
  },
  {
    "key": "ctrl+a ctrl+4",
    "command": "editor.foldLevel4",
    "when": "editorTextFocus && foldingEnabled && !terminalFocus"
  },
  {
    "key": "ctrl+a ctrl+5",
    "command": "editor.foldLevel5",
    "when": "editorTextFocus && foldingEnabled && !terminalFocus"
  },
  {
    "key": "ctrl+a ctrl+6",
    "command": "editor.foldLevel6",
    "when": "editorTextFocus && foldingEnabled && !terminalFocus"
  },
  {
    "key": "ctrl+a ctrl+7",
    "command": "editor.foldLevel7",
    "when": "editorTextFocus && foldingEnabled && !terminalFocus"
  },
  // Unfolding
  {
    "key": "ctrl+a u",
    "command": "editor.unfold",
    "when": "editorTextFocus && foldingEnabled && !terminalFocus"
  },
  {
    "key": "ctrl+a ctrl+u",
    "command": "editor.unfoldAll",
    "when": "editorTextFocus && foldingEnabled && !terminalFocus"
  },
  {
    "key": "ctrl+f",
    "command": "editor.action.startFindReplaceAction",
    "when": "editorFocus || editorIsOpen"
  },
  {
    "key": "alt+ctrl+f",
    "command": "-editor.action.startFindReplaceAction",
    "when": "editorFocus || editorIsOpen"
  },
  {
    "key": "alt+ctrl+f",
    "command": "actions.find",
    "when": "editorFocus || editorIsOpen"
  },
  {
    "key": "ctrl+f",
    "command": "-actions.find",
    "when": "editorFocus || editorIsOpen"
  },
  {
    "key": "ctrl+d",
    "command": "-deleteRight",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+d",
    "command": "-list.focusPageDown",
    "when": "listFocus && !inputFocus"
  },
  // Terminal Navigation
  {
    "key": "ctrl+a m",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "panelFocus"
  },
  {
    "key": "ctrl+a n",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
  },
  {
    "key": "ctrl+a p",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
  },
  {
    "key": "shift+ctrl+]",
    "command": "-workbench.action.terminal.focusNext",
    "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
  },
  {
    "key": "ctrl+a ,",
    "command": "workbench.action.terminal.rename"
  },
  {
    "key": "ctrl+a c",
    "command": "workbench.action.terminal.new",
    "when": "terminalProcessSupported || terminalWebExtensionContributedProfile"
  },
  {
    "key": "ctrl+shift+`",
    "command": "-workbench.action.terminal.new",
    "when": "terminalProcessSupported || terminalWebExtensionContributedProfile"
  },
  {
    "key": "ctrl+a x",
    "command": "workbench.action.terminal.kill",
  },
]